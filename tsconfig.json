{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "baseUrl": "./",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./interface-ui/dist/types",
    "types": ["node"],
    "paths": {
      "@interface-ui/components": [
        "packages/components",
        "@interface-ui/components"
      ],
      "@interface-ui/constants": [
        "packages/constants",
        "@interface-ui/constants"
      ],
      "@interface-ui/theme": ["packages/theme", "@interface-ui/theme"],
      "@interface-ui/utils": ["packages/utils", "@interface-ui/utils"]
    }
  },

  "exclude": [
    "node_modules",
    "build",
    "dist",
    "test",
    "docs",
    "scripts/templates",
    "playground",
    "gulpfile.ts",
    "**__/test/__**/*",
    "**/style/**/*",
    "**/*.md"
  ]
}
